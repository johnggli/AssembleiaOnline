<%= simple_form_for @topic, url: url, method: method do |p| %>
  <%= p.input :title, input_html: { style: "width: 50%;" } %>
  <%= p.association :assembly, label: Assembly.model_name.human, label_method: :title, value_method: :id, include_blank: t('select.assembly'), input_html: { style: "width: 50%;" } %>
  <%= p.input :description, as: :rich_text_area, input_html: { style: "height: auto;" } %>

  <hr>

  <h3><%= t('options') %></h3>
  
  <hr>

  <div id="options">
    <%= p.simple_fields_for :options do |option| %>
      <%= render partial: 'admin/topics/option_fields', locals: { f: option } %>
    <% end %>
    <div class="links">
        <%= link_to_add_association t('new_option'), p, :options, class:'btn btn-info btn_option' %>
    </div>
  </div>

  <hr>

  <%= p.submit controller.action_name == 'edit' ?
    t('submit.update') + ' ' + Topic.model_name.human :
    t('submit.create') + ' ' + Topic.model_name.human,
    class:'btn btn-success' %>
  <%= link_to t('links.cancel'), admin_topics_path, class:'btn btn-danger' %>
<% end %>