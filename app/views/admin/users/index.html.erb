<% flash.each do |key, value| %>
  <div id="notice" class="alert <%= flash_class(key) %> alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= value %>
  </div>
<% end %>

<h1>
  Usuarios
  <%= link_to 'Novo(a)', new_admin_user_path, class:"btn btn-primary new" %>
</h1>

<hr>

<table class="table table-bordered table-hover">
  <thead class="thead-light">
    <tr>
      <th>#</th>
      <th>Nome Completo</th>
      <th>Cpf</th>
      <th>Bloc</th>
      <th>Ap</th>
      <th>Permissao</th>
      <th>Adimplente</th>
      <th colspan="3">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.user_name %></td>
        <td><%= user.pre_registration.cpf %></td>
        <td><%= user.pre_registration.bloc %></td>
        <td><%= user.pre_registration.ap %></td>
        <td><%= user.role %></td>
        <td>
          <% if (user.paid) ? @class_name = 'badge badge-success' : @class_name = 'badge badge-danger'%><% end %>
          <span class="<%= @class_name %>">
            <%= user.paid %>
          </span>
        </td>
        <td>
          <%if user.paid?%>
            <%= link_to 'Bloquear', set_not_paid_path(user), method: :patch, class:"btn btn-outline-danger" %>
          <%else%>  
            <%= link_to 'Liberar', set_paid_path(user), method: :patch, class:"btn btn-outline-success" %>
          <% end %>
          <%= link_to 'Edit', edit_admin_user_path(user), class:'btn btn-primary'%>
          <%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
