<%= render "layouts/user_nav" %>
<div class="container" style="padding-top: 64px; text-align:center;">
  <h2><%= t('devise.do_login') %></h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label t('devise.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label t('devise.password.normal') %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label  t('devise.remember') %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('login'), class:'btn btn-primary' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

