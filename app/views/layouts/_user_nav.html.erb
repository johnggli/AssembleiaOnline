          <% end %>
          <li class="nav-item">
            <span class="hello-user"><%= t('hello') + ', ' + current_user.user_name %></span>
            <span><%= link_to t('logout'), destroy_user_session_path, method: :delete, data: { confirm: t('confirm') }, class:'btn btn-danger ml-3' %></span>
          </li>
        <% else %>
          <li class="nav-item">
            <span><%= link_to t('login'), new_user_session_path, class:'btn btn-success ml-3' %></span>
