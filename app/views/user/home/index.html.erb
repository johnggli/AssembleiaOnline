<div class="card">
  <div class="card-body text-center">
    <h1><%= "#{t('latest')} #{Assembly.model_name.human(count: 2)}" %></h1>
    <h5 class="text-secondary text-center" style="width: 60%; margin: auto;"><%= t('message') %></h5>
  </div>
  <div class="card-body">
    <div class="card-columns">
      <% @assemblies.each do |assembly| %>
        <div class="card">
          <div class="card-header text-center">
            <h3><%= "##{assembly.id} #{assembly.title}" %></h3>
          </div>
          <div class="card-body text-center">
            <p style="font-size:24px"><%= t('situation') %>:
              <% if assembly.state == 'open' %>
                <span class="badge badge-success"><%= t('state.open') %></span>
              <% elsif assembly.state == 'close' %>
                <span class="badge badge-danger"><%= t('state.close') %></span>
              <% else %>
                <span class="badge badge-warning"><%= t('state.sketch') %></span>
              <% end %>
            </p>
            <p>
              <%= "NaN" %> <%= t('voting_topics') %><br>
              <%if user_signed_in? %>
                <%= t('day') %> <strong> <%= assembly.start_time %> </strong><br>
                <%= t('closure') %> <strong> <%= assembly.finish_time %> </strong>
              <% else %>
                <%= t('day') %> <strong><%= t('users_only') %></strong><br>
                <%= t('closure') %> <strong><%= t('users_only') %></strong>
              <% end %>
            </p>
            <%= link_to t('links.details'), user_assembly_path(assembly), class:"btn btn-outline-info", style:"width: 100%" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>